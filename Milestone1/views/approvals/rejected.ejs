<div class="view-all-container">
    <h2>Todas as Doações</h2>
    <table>
        <tr>
            <th>ID</th>
            <th>Doador</th>
            <th>Data da Doação</th>
            <th>Tipo de Doação</th>
            <th>Detalhes</th>
            <th>Remover</th>
        </tr>
        <% donations.forEach(function(donation) { %>
        <tr>
            <td><%= donation._id %></td>
            <td><%= donation.donator.name %></td>
            <td><%= donation.donationDate %></td>
            <td><%= donation.typeOfDonation %></td>
            <td><a href="/donations/show/<%= donation._id %>">Detalhes</a></td>
            <td><a href="/donations/delete/<%= donation._id %>" onclick="return confirmDelete()">Remover</a></td>
        </tr>
        <% }); %>
    </table>
</div>
<div class="back-button">
    <!-- Button in righ side-->
    <a href="/dashboard">Voltar</a>
</div>