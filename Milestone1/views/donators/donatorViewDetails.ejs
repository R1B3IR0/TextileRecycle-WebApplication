        <tr>
            <td>Name</td>
            <td>:</td>
            <td><%= donator.name %></td>
        </tr>
        <tr>
            <td>NIF</td>
            <td>:</td>
            <td><%= donator.nif %></td>
        </tr>
        <tr>
            <td>Email</td>
            <td>:</td>
